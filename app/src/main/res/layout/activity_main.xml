<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="merst.wurfcoincoin.MainActivity"
    tools:layout_editor_absoluteY="0dp"
    tools:layout_editor_absoluteX="0dp">

    <RelativeLayout
        android:layout_width="301dp"
        android:layout_height="462dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="33dp"
        app:layout_constraintHorizontal_bias="0.507"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <Button
            android:id="@+id/coincoin"
            android:layout_width="202dp"
            android:layout_height="88dp"
            android:layout_marginBottom="118dp"
            android:text="@string/coin"
            tools:layout_editor_absoluteX="91dp"
            tools:layout_editor_absoluteY="145dp"
            android:layout_alignParentBottom="true"
            android:layout_alignEnd="@+id/wurf" />

        <Button
            android:id="@+id/beaker"
            android:layout_width="204dp"
            android:layout_height="89dp"
            android:text="@string/beaker"
            tools:layout_editor_absoluteX="90dp"
            tools:layout_editor_absoluteY="258dp"
            android:layout_alignParentTop="true"
            android:layout_alignStart="@+id/wurf" />

        <Button
            android:id="@+id/wurf"
            android:layout_width="204dp"
            android:layout_height="89dp"
            android:layout_below="@+id/beaker"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="39dp"
            android:text="@string/lamb"
            tools:layout_editor_absoluteX="90dp"
            tools:layout_editor_absoluteY="32dp" />
    </RelativeLayout>

</android.support.constraint.ConstraintLayout>
